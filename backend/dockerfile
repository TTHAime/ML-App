## Dockerfile for Surface Crack Detection service
FROM python:3.11-slim as base

# install system libs for TensorFlow and Pillow
RUN apt-get update && apt-get install -y \
    build-essential \
    libglib2.0-0 \
    libsm6 \
    libxrender1 \
    libxext6 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# copy requirements and install
COPY backend_fastapi/requirements.txt ./requirements.txt
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# copy application and model
COPY backend_fastapi/main.py ./main.py
COPY backend_fastapi/model.h5 ./model.h5

EXPOSE 8000
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
